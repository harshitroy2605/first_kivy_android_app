<LoginScreen>:
	name:"login_screen"
	GridLayout:
		cols : 1
		GridLayout:
			cols : 1
			Label:
				text: "User Login"

			TextInput:
				hint_text:"User Name"

			TextInput:
				hint_text: "Password"

			Button:
				text: "Login"

		GridLayout:
			cols : 2
			Button:
				text: "forgot Password"

			Button:
				text: "sign up"
				on_press : root.sign_up()


<SignUpScreen>:
	GridLayout:
		cols:1
		Label:
			text:"Sign up here"
		TextInput:
			id:username
			hint_text:"user name"
		TextInput:
			id:password
			hint_text:"password"

		Button:
			text:"Submit"
			on_press: root.add_user(root.ids.username.text,root.ids.password.text)

<SignUpScreenSuccess>:
	GridLayout:
		cols:1
		Label:
			text:"Sign up success"
		Button:
			text:"Login page"
			on_press:root.go_to_login()


<RootWidget>:
	LoginScreen:
		name : "login_screen"
	SignUpScreen:
		name :	"sign_up_screen" 

	SignUpScreenSuccess:
		name : "Sign_Up_Screen_Success"
